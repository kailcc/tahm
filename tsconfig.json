{
    "compilerOptions": {
        "module": "system",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es5",
        "typeRoots": ["typings", "node_modules/@types"],
        "lib": [
            "es2015",
            "es6",
            "es2017",
            "dom"
        ]
    },
    "files": [
        "typings/index.d.ts"
    ],
    "include": [
        "lib/**/*",
        "typings"
    ],
    "exclude": [
        "node_modules"
    ]
}